<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ListaDogApp"
             x:Class="ListaDogApp.MainPage"
             >
    <StackLayout >
        
            <Label HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   Text="Lista DOG"
                   FontSize="40"
                   x:Name="label_valor"
                   FontAttributes="Bold"
                   Margin="40"
                   />
        
        <Entry Placeholder="Nome" 
                Margin="20" 
                x:Name="nome"
                
                />
        <Entry Placeholder="Idade" 
                Margin="20" 
                x:Name="idade"
               
                />
        <Entry Placeholder="RaÃ§a" 
                Margin="20" 
                x:Name="raca"
               
                />
           
            <StackLayout HorizontalOptions="Center" 
                         VerticalOptions="EndAndExpand"
                         Orientation="Horizontal" Margin="0, 80, 0, 40"
                         >
            
               <Button Text="ADD" 
                       
                       WidthRequest="80" 
                       HeightRequest="60"
                       
                       VerticalOptions="End" 
                       BackgroundColor="Gray"
                       TextColor="White"
                       HorizontalOptions="Start"
                       Clicked="Adicionar"
                       />
                
             <Button Text="Listar" WidthRequest="80" HeightRequest="60"
                      VerticalOptions="End" 
                      HorizontalOptions="Start"
                      BackgroundColor="Gray"
                     TextColor="White"
                       Clicked="Listar"
                   />
                
            </StackLayout>
        
        
    </StackLayout>     
</ContentPage>  